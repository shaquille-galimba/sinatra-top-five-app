<h2>Top five <a class="links" href="/topics/<%= @list.topic.slug %>"><%= @list.topic.name %></a> for <a class="links" href="/users/<%= @list.user.slug %>"><%= @list.user.username %></a></h2>

<ul>
	<% @list.arrayed_contents.each.with_index(1) do |content, index| %>
		<li><%= index %>. <%= content %></li>
	<% end %>
</ul>
<br>

<% if @list.user == current_user %>
	<button onclick="location.href='/lists/<%= @list.id %>/edit'">Edit</button>
<% end %>
<br><br>

<button onclick="window.history.back()">Go back</button>
