<h1>Create a new top five!</h1>
<br>

<form autocomplete="off" action="/lists" method="post">

	<label>Topic:</label>
	<input type="text" name="topic_name" value="<%= @topic.name if @topic %>">
	<br><br>

	<% (1..5).each do |n| %>
		<label>Top <%= n %>:</label>
		<input style="width:500px;" type="text" name="contents[]">
		<br><br>
	<% end %>

	<input type="submit" value="submit">
</form>
