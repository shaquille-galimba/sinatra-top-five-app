<h1>Edit your top five <%= @list.topic.name %></h1>
<br>

<form autocomplete="off" action="/lists/<%= @list.id %>" method="post">
	<input id="hidden" type="hidden" name="_method" value="patch">

	<% @list.arrayed_contents.each.with_index(1) do |content, index| %>
		<label>Top <%= index %>:</label>
		<input style="width:500px;" type="text" name="contents[]" value="<%= content %>">
		<br><br>
	<% end %>

	<input type="submit" value="submit">
</form>
<br>

<form class="" action="/lists/<%= @list.id %>/delete" method="post">
	<input id="hidden" type="hidden" name="_method" value="delete">
	<input type="submit" value="delete list">
</form>
