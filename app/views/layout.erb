  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>SinatraTopFiveApp</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
		<link rel="stylesheet" href="/stylesheets/style.css">

		<style media="screen">
			.error {
				color: red;
			}

			.confirm {
				color: green;
			}
		</style>



  </head>
  <body>
		<% if logged_in? %>
			<div class="navbar">
				<ul>
					<li style="border-right: 1px solid #bbb"><a href="/lists/new">New top five</a></li>
					<li><a href="/users/<%= current_user.slug %>"><%= current_user.slug %></a></li>
					<li><a href="/topics">Topics</a></li>
					<li><a href="/users">Users</a></li>
					<li style="float:right"><a href="/logout">Log out</a></li>
				</ul>
			</div>
		<% end %>
    <div class="wrapper">

				<% if flash[:error] %>
					<h3 class="error"><%= flash[:error] %></h3>
				<% elsif flash[:confirm] %>
					<h3 class="confirm"><%= flash[:confirm] %></h3>
				<% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>SinatraTopFiveApp</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
