<h1><%= @topic.name %></h1>

	<% @topic.lists.each do |list| %>
		<ul class="lists" onclick="location.href='/lists/<%= list.id %>'">
			<h2><a class="links" href="/users/<%= list.user.slug %>"><%= list.user.username %></a></h2>
			<ul>
				<% list.arrayed_contents.each.with_index(1) do |c, i| %>
					<li><%= i %>. <%= c %></li>
				<% end %>
			</ul>
			<br>
		</ul>
	<% end %>
